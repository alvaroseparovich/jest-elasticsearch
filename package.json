{
  "name": "jest-elasticsearch",
  "version": "1.0.0",
  "description": "Run your tests using jest & elasticsearch-local",
  "keywords": [
    "jest",
    "jest environment",
    "jest preset",
    "elasticsearch",
    "elasticsearch-local",
    "elasticsearch local"
  ],
  "repository": "shelfio/jest-elasticsearch",
  "license": "MIT",
  "author": {
    "name": "Andrii Petlovanyi",
    "email": "andrii.petlovanyi@shelf.io",
    "url": "shelf.io"
  },
  "jest": {
    "preset": "./jest-preset.js"
  },
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "lint": "eslint . --fix --ext .js,.json,.ts --quiet",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{html,json,md,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}