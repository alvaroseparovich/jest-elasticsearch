{
  "name": "@shelf/jest-elasticsearch",
  "version": "1.0.0",
  "description": "Run your tests using jest & elasticsearch-local",
  "keywords": [
    "jest",
    "jest environment",
    "jest preset",
    "elasticsearch",
    "elasticsearch local",
    "elasticsearch-local"
  ],
  "repository": "shelfio/jest-elasticsearch",
  "license": "MIT",
  "author": {
    "name": "Andrii Petlovanyi",
    "email": "andrii.petlovanyi@shelf.io",
    "url": "shelf.io"
  },
  "files": [
    "jest-es-config.js",
    "jest-preset.js",
    "setup.js",
    "teardown.js"
  ],
  "scripts": {
    "coverage": "jest --coverage",
    "lint": "eslint . --ext .js,.json --fix",
    "lint:ci": "eslint . --ext .js,.json --quiet",
    "test": "jest src"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{html,json,md,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "preset": "./jest-preset.js"
  },
  "dependencies": {
    "@shelf/elasticsearch-local": "1.0.0",
    "cwd": "0.10.0"
  },
  "devDependencies": {
    "@elastic/elasticsearch": "7.6.0",
    "@shelf/eslint-config": "0.16.0",
    "eslint": "7.1.0",
    "husky": "4.2.5",
    "jest": "26.0.1",
    "lint-staged": "10.2.6",
    "prettier": "2.0.5"
  },
  "engines": {
    "node": ">=12"
  },
  "publishConfig": {
    "access": "public"
  }
}
