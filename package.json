{
  "name": "jest-elasticsearch",
  "version": "1.0.0",
  "description": "Run your tests using jest & elasticsearch-local",
  "keywords": [
    "jest",
    "jest environment",
    "jest preset",
    "elasticsearch",
    "elasticsearch local",
    "elasticsearch-local"
  ],
  "repository": "shelfio/jest-elasticsearch",
  "license": "MIT",
  "author": {
    "name": "Andrii Petlovanyi",
    "email": "andrii.petlovanyi@shelf.io",
    "url": "shelf.io"
  },
  "files": [
    "lib"
  ],
  "main": "lib",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "rm -rf lib/ && yarn build:types && yarn build:code",
    "build:code": "babel src --out-dir lib --ignore '**/*.test.ts' --extensions '.ts' && find ./lib -name '*.test.d.ts' -delete",
    "build:types": "tsc --emitDeclarationOnly --declaration --isolatedModules false --declarationDir lib",
    "coverage": "jest --coverage",
    "lint": "eslint . --ext .js,.ts,.json --fix",
    "lint:ci": "eslint . --ext .js,.ts,.json",
    "prepack": "yarn build",
    "test": "jest src",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{html,json,md,yml}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,ts}": [
      "eslint --fix",
      "git add"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  },
  "dependencies": {
    "@elastic/elasticsearch": "7.5.0"
  },
  "devDependencies": {
    "@babel/cli": "7.8.3",
    "@babel/core": "7.8.3",
    "@babel/preset-env": "7.8.3",
    "@babel/preset-typescript": "7.8.3",
    "@shelf/elasticsearch-local": "0.2.0",
    "@shelf/eslint-config": "0.14.0",
    "@shelf/indexing-es": "7.6.8",
    "@types/elasticsearch": "5.0.36",
    "@types/jest": "24.9.0",
    "@types/node": "13.1.8",
    "babel-jest": "24.9.0",
    "eslint": "6.8.0",
    "husky": "4.0.10",
    "jest": "24.9.0",
    "lint-staged": "10.0.0",
    "prettier": "1.19.1",
    "typescript": "3.7.5"
  },
  "engines": {
    "node": ">=12"
  },
  "publishConfig": {
    "access": "public"
  }
}
